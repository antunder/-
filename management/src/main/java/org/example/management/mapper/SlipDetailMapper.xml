<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.management.mapper.SlipDetailMapper">
    <!-- 查询 -->
    <select id="list" resultType="org.example.management.pojo.SlipDetail">
        select id, slip_id, good_id, number from slip_detail
        <where>
            <if test="slipId != null">
                slip_id = #{slipId}
            </if>
            <if test="goodId != null">
                and good_id = #{goodId}
            </if>
        </where>
        order by id desc
    </select>
    <!--更新开单细节信息-->
    <update id="update">
        update slip_detail
        <set>
            <if test="goodId != null">
                good_id = #{goodId},
            </if>
            <if test="number != null">
                number = #{number},
            </if>
        </set>
        where id = #{id}
    </update>
    <!-- 批量删除开单细节-->
    <select id="delete">
        delete from slip_detail where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>
</mapper>